<html>

<head>
    <%- include('../partials/generalHead.ejs') %>
        <link rel="stylesheet" href="/styles/login-signin.css">
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row h-100">
            <div class="left col-12 col-md-6">
                <div class="left-content-conatiner d-flex flex-column h-100">
                    <div class="pageHeader">
                        <h3>Untitled UI</h3>
                    </div>

                    <div class="pb-5 form-container d-flex justify-content-center align-items-center">
                        <div class="form-width">
                            <div class="form-header text-center pb-3">
                                <h3>Admin Login</h3>
                                <p>Please enter your details</p>
                            </div>
                    
                            <div class="form-inner-container">
                                <form  method="POST" id="loginForm">
                                    <div class="form-group fs-form-field fw-semi-bold">
                                        <label for="exampleInputEmail1">Email</label>
                                        <input type="email" class="form-control " id="email" aria-describedby="emailHelp" name="email"
                                            placeholder="Enter email">
                                        <div class="ml-4 error-span-parent"></div>
                                    </div>
                                    <div class="form-group fs-form-field fw-semi-bold">
                                        <label for="exampleInputPassword1 ">Password</label>
                                        <input type="password" class="form-control " name="password" id="password" placeholder="Password">
                                        <div class="ml-4 error-span-parent"></div>
                    
                                    </div>
                                    <button type="submit"
                                        class="btn btn-primary w-100 fs-form-field fw-semi-bold submit-btn">Submit</button>
                                </form>
                            </div>
                    
                        </div>
                    </div>

                    <div class="first-footer">
                        <p>&#169;Untitled UI 2077</p>
                    </div>
                </div>
            </div>
            <div class="right col-6 d-none d-md-block">
                <div class="background-image-container">

                </div>
            </div>
        </div>
    </div>


    <script type="module" src="/js/adminLoginValidation.js"></script>
</body>

</html>